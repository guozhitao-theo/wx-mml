/* 公共样式的封装 */
/* 灰色 分割样式 */
.mml-segmentation {
  width: 100%;
  height: 25rpx;
  background-color: #f7f7f7;
}
/* 首页 商品类型标题样式 */
.mml-goodsclass-title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: 800;
}
.mml-goodsclass-titleEn.sell {
  color: #00b7ee;
}
.mml-goodsclass-titleEn {
  font-size: 28rpx;
  font-weight: 600;
  color: #eb544d;
}
.mml-goods-more {
  float: right;
  font-size: 28rpx;
  color: #999;
  font-weight: normal;
}
/* 价格按钮 */
.mml-goodsPrice-btn {
  margin-top: 10rpx;
  width: 160rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 8rpx;
  padding: 8rpx 10rpx;
  background: #97cbdf;
}